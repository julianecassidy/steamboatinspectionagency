---
import LinkButton from "./LinkButton.astro";
export interface Props {
  activeNav?: "about" | "categories" | "contact" | "faqs" | "search";
}

const { activeNav } = Astro.props;
---

  <ul id="aux-nav-items" class="display-none sm:flex">
    <li>
      <a href="/about" class={activeNav === "about" ? "active" : ""}> about</a>
    </li>
    <li>
      <a href="/tags" class={activeNav === "categories" ? "active" : ""}>
        categories
      </a>
    </li>
    <li>
      <a href="/contact" class={activeNav === "contact" ? "active" : ""}>
        contact
      </a>
    </li>
    <li>
      <a href="/faqs" class={activeNav === "faqs" ? "active" : ""}> faqs</a>
    </li>
    <li class="sm:display-none">
        <LinkButton
          href="/search"
          className={`focus-outline p-3 sm:p-1 ${
            activeNav === "search" ? "active" : ""
          } flex`}
          ariaLabel="search"
          title="Search"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="scale-125 sm:scale-100"
            ><path
              d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
            ></path>
          </svg>
        </LinkButton>
      </li>
  </ul>

<style>
  #aux-nav-items li {
    @apply font-sans text-lg hover:text-card px-3 transition hover:duration-75;
  }
</style>
